<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lands"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/nombreJuego"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="30sp" />


        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:src="@drawable/todos" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/MainJugar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight=".5"
                android:background="@drawable/boton"
                android:text="@string/iniciar"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/MainComo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight=".5"

                android:background="@drawable/boton"
                android:text="@string/comoJugar"
                android:textColor="#FFF"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/MainAcerca"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton"
            android:text="@string/AcercaApp"
            android:textColor="#FFF"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>